<Page x:Class="RentACar_FinalProject.Views.Customer.Pages.CarHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentACar_FinalProject.Views.Customer.Pages"
      mc:Ignorable="d" 
      Style="{StaticResource sPage}">
    <ListView ItemsSource="{Binding SelectedCustomer.HistoryOfCars}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="ID" Width="185" DisplayMemberBinding="{Binding CarID}"/>
                <GridViewColumn Header="Make" Width="185" DisplayMemberBinding="{Binding Make}"/>
                <GridViewColumn Header="Model" Width="185" DisplayMemberBinding="{Binding Model}"/>
                <GridViewColumn Header="Count of rent day" Width="185" DisplayMemberBinding="{Binding RentDayCount}"/>
            </GridView>
        </ListView.View>
    </ListView>

</Page>
