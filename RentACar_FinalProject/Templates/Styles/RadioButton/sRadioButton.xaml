<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="sRadioButton" TargetType="RadioButton">
        <Setter Property="Margin" Value="20 20 50 20" />
        <Setter Property="Foreground" Value="{StaticResource cText}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource fTitleOfTextBlock}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Cursor" Value="Hand" />

        
    </Style>
</ResourceDictionary>